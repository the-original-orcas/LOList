<!DOCTYPE html>
<html>
  <head>
    <title>LOList</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/materialize/<%= materialize_version %>/css/materialize.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/<%= fa_version %>/css/font-awesome.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
    <body>
      <div class="navbar-fixed">
        <nav>
          <div class="nav-wrapper teal lighten-2 fixed z-depth-2">
            <a href="#!" class="brand-logo center"><% if user_signed_in? %>(MY) <% end %>LOList</a>
              <ul class="right">
                <li>
                <!-- Modal Trigger -->
                <% if !current_user %>
                <div class="valign-wrapper">
                  <a id="login-button" class="modal-trigger valign" href="#modal1" style="margin-top: 2px;">Login</a>
                </div>
                <% end %>
                <% if user_signed_in? %>
                <!-- Edit Cog Button -->
                <li>
                <%= link_to(
                    content_tag(
                      :i,
                      nil, 
                      class: 'mdi-action-settings small'
                    ), 
                    edit_user_registration_path,
                    style:
                      "color:#fff" 
                  ) 
                %>
                </li>
               <!-- Sign out -->

                <%= link_to(
                    content_tag(
                      :p,
                      nil, 
                      class: 'fa fa-sign-out'
                    ), 
                    destroy_user_session_path,
                    method: :delete,
                    style:
                      "color:#fff" 
                  ) 
                %>
                </li>	
                <% else %>
                <!-- Sign up if not logged in button -->
                <li>
                <%= link_to(
                  content_tag(
                    :i,
                    nil, 
                    class: 'mdi-action-settings small'
                  ), 
                  new_user_registration_path,
                  style:
                    "color:#fff" 
                  ) 
                %>
                </li>
                <% end %>
            </ul>
          </div>
        </nav>
      </div>

      <div class="container">

      <%= yield %>

      </div>
    <script src="//cdnjs.cloudflare.com/ajax/libs/materialize/<%= materialize_version %>/js/materialize.min.js"></script>
    </body>

</html>