<h1>User#edit</h1>

<p>Find me in app/views/user/edit.html.erb</p>
<div class='row'>
<% @comedians.each do |comedian| %>
<div class='col s4'>
	<div class='card'>
		<div class='card-image'>
			<img src=<%= comedian.image %>>
			<span class='card-title'> <%= comedian.name %> </span>
		</div>
		<div class="card-action">
		<a href="#" onclick="this.style.backgroundColor='#990000'">Checked = red</a>

    <%= form_for @user, :remote => true do |f| %>
  <%= f.check_box 'checked', :class => 'following' %> 
  <%= f.label :checked %>
<% end %>

    </div>
	</div>
</div>
<% end %>
</div>