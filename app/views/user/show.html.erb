<h1>show <%=@user.email  %></h1>
<p>Find me in app/views/user/show.html.erb</p>

<a href="/user/<%= @user.id  %>/edit">edit your prefs</a>
<div class='row'>
<% @user.comedians.each do |comedian| %>
<div class='col s4'>
	<div class='card'>
		<div class='card-image'>
			<img src=<%= comedian.image %>>
			<span class='card-title'> <%= comedian.name %> </span>
		</div>
		<% comedian.events.each do |event| %>
		<p><%= event.venue  %></p>
		<% end  %>
	<div class="card-action">

    <a id='comedian-<%= comedian.id %>' href="#">Follow</a>
    <a href="#" onclick="this.style.backgroundColor='#990000'">Checked = red</a>
    </div>
	</div>
</div>

<% end %>
</div>