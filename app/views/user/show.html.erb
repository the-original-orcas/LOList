<div class="container center-align">
    <h3 id='find-me'></h3>
    <div id='user-<%=@user.id%>'>
    </div>
</div>

<% @faves.each do |comedian| %>
<div class='col s12'>
    <div class="card faveComs">
        <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src=<%= comedian.image %>>
        </div>
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= comedian.name %><i class="mdi-navigation-more-vert right"></i></span>
            <% if @user.comedians.include?(comedian) %>
            <span id='comedian-<%= comedian.id %>' class='index-follow index-following'><i class="mdi-action-stars"></i></span>
            <% else  %>
            <span id='comedian-<%= comedian.id %>' class='index-follow'><i class="mdi-action-stars"></i></span>
            <% end  %>
        </div>
        <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= comedian.name %><i class="mdi-navigation-close right"></i></span>
            <img class = 'insideDivImg' src='<%= comedian.image %>'>
            <p class="grey-text text-darken-4">Upcoming events:</p>
            <% comedian.events.each do |event| %>
            <p>Where: <%= event.venue  %></p>
            <p>When: <%= event.date  %></p>
            <p>: <%= event.address  %></p>
            <%= image_tag "http://maps.google.com/maps/api/staticmap?size=225x150&sensor=false&zoom=16&markers=#{event.latitude}%2C#{event.longitude}" %>

            <% end  %>
            <div class="videoWrapper">
                <iframe class='col s3'width="560" height="349" src="<%=comedian.youtube_url%>" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>
<% end %>
<div class="row">
    <% @nonfaves.each do |comedian| %>
    <div class='col s12 m4'>
        <div class='card small z-depth-2'>
            <div class='card-image'>
                <img src=<%= comedian.image %>>
                <span class='card-title grey-text text-darken-3 bold'> <%= comedian.name %> </span>
            </div>
            <div class="card-action">
                <i class="fa fa-youtube-play fa-2x activator grey-text text-darken-3"></i>
                <% if @user.comedians.include?(comedian) %>
                <span id='comedian-<%= comedian.id %>' class='index-follow index-following'><i class="mdi-action-stars grey-text text-darken-3"></i></span>
                <% else  %>
                <span id='comedian-<%= comedian.id %>' class='index-follow'><i class="mdi-action-stars grey-text text-darken-3"></i></span>
                <% end  %>
                <div class="center-align up-arrow">
                    <img id="chevron-up" src="http://cdn1.freepik.com/image/th/408-63950.png"></img>
                </div>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-3"><%=comedian.name%> <i class="mdi-navigation-close right"></i></span>
                <div class="video-container">
                    <iframe width="560" height="349" src="<%=comedian.youtube_url%>" frameborder="0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
    <% end %>
</div>