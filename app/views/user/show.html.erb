<h5>show <%=@user.email  %></h5>
<p>Find me in app/views/user/show.html.erb</p>

<a href="/user/<%= @user.id  %>/edit">edit your prefs</a>

<% @faves.each do |comedian| %>
<div class='col s12'>
<div class="card faveComs">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src=<%= comedian.image %>>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= comedian.name %><i class="mdi-navigation-more-vert right"></i></span>

          <% if @user.comedians.include?(comedian) %>
			<span id='comedian-<%= comedian.id %>' class='follow following'><i class="mdi-action-stars"></i></span>
    <% else  %>
      <span id='comedian-<%= comedian.id %>' class='follow'><i class="mdi-action-stars"></i></span>
    <% end  %>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= comedian.name %><i class="mdi-navigation-close right"></i></span>
		<p class="grey-text text-darken-4">Upcoming events:</p>
		<% comedian.events.each do |event| %>
		<p>Where: <%= event.venue  %></p>
		<p>When: <%= event.time  %></p>
		<% end  %>

        <div class="videoWrapper">
        	<iframe src="<%= comedian.youtube_url %>&output=embed" frameborder = "0"	width = "560",
	height= "349";seamless></iframe>
        </div>
        </div>

      </div>	
</div>
<% end %>
<div class="row">
<% @nonfaves.each do |c| %>
<div class='col s4'>
<div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src=<%= c.image %>>
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= c.name %><i class="mdi-navigation-more-vert right"></i></span>

          <% if @user.comedians.include?(c) %>
			<span id='comedian-<%= c.id %>' class='follow following'><i class="mdi-action-stars"></i></span>
    <% else  %>
      <span id='comedian-<%= c.id %>' class='follow'><i class="mdi-action-stars"></i></span>
    <% end  %>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= c.name %><i class="mdi-navigation-close right"></i></span>
		<p class="grey-text text-darken-4">Upcoming events:</p>
		<% c.events.each do |event| %>
		<p>Where: <%= event.venue  %></p>
		<p>When: <%= event.time  %></p>
		<% end  %>

    
        </div>
        </div>

      </div>	


<% end %>
</div>
