<script src="http://connect.facebook.net/en_US/all.js"></script>

<div id="landing-banner" class="valign-wrapper">
		<h1 class="valign center-align">LOList</h1>
		<h5 class="valign center-align">No Mo' FOMO! Don't ever miss out when your favorite comedian comes to town. Sign up now and receive an email notification telling you when the next big show is.</h5>
</div>

<div class="divider"></div>
<!-- Expanding cards? -->

<!-- sign up -->
<div class='container'>

	<div class="row">

	
		
		<h4>Sign Up</h4>
			
		<form class='col s6' action="/user" method="POST">	
			<div class="input-field col s12">
			<input type="text" name="user[email]" placeholder="Email"></input>
			</div>

			<div class="input-field col s12">
			<input type="password" name="user[password]" placeholder="Password"></input>
			</div>

			<div class="input-field col s12">
			<input type="password" name="user[password_confirmation]" placeholder="Confirm Password"></input>
			</div>
			<input type="hidden" name="authenticity_token" value = "<%= form_authenticity_token()  %>">
			<button class="waves-effect waves-light blue btn" type="submit" name="action">Sign Up</button>

		</form>
	

<!-- login  -->

		<form class='col s6' action="/user/sign_in" method="POST">
		<h4>Existing Users, Login</h4>
			<div class="input-field col s12">
			<input type="text" name="user[email]" placeholder="Email"></input>
			</div>

			<div class="input-field col s12">
			<input type="password" name="user[password]" placeholder="Password"></input>
			</div>
			<input type="hidden" name="authenticity_token" value = "<%= form_authenticity_token()  %>">
			<button class="waves-effect waves-light blue btn" type="submit" name="action">Login</button>

		</form>
	</div>
</div>

